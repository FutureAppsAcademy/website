---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Contact from './contact.astro';

const metadata = {
  title: 'Future Apps Academy',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Enroll today',
        href: 'https://aqv0dow2vek.typeform.com/to/fDDDgSPV',
        target: '_blank',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Coding for your future with <span class="hidden xl:inline"> </span>
      <span class="text-accent dark:text-white highlight"> Future Apps Academy</span>.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Future Apps Academy</span> offers iOS App Development bootcamps empowering high school
        students to learn app development with experienced iOS developers. Come learn app building skills and join a development
        community forever.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AstroWind: Production-ready.</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with Future Apps Academy"
    subtitle="An immersive and dynamic learning experience where high school students can learn to build iOS apps in just a few weeks, guided by experienced iOS developers."
    items={[
      {
        title: 'Introduction to iOS App Development',
        description:
          'A well-rounded curriculum that introduces students to programming principles and app development, tailored specifically for high school students.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Hands-on Project Experience',
        description:
          'Students will develop their own basic applications using modern technologies under the guidance of experienced developers.',
        icon: 'tabler:components',
      },
      {
        title: 'Foundational Coding Skills',
        description:
          'Learn the essential coding skills and best practices in app design and deployment to ensure a solid start in app development.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Intensive Learning Schedule',
        description:
          'A fast-paced learning schedule designed to teach essential app-building skills and provide a rewarding first experience in coding.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Career Readiness and Networking',
        description:
          'Opportunities for students to connect with tech industry leaders, enhancing their career readiness and building a professional network from an early age.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Encouragement of Innovation and Creativity',
        description:
          'Encourages creativity and innovation, allowing students to explore new ideas and bring their unique app concepts to life during the program.',
        icon: 'tabler:bulb',
      },
    ]}
  />

